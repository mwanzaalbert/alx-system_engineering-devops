#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user and listen on port 8080 on all active IPs.

# Install nginx if it's not already installed
apt-get update
apt-get install -y nginx

# Modify the Nginx configuration to set the user and the port
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf
sed -i 's/listen 80;/listen 8080;/' /etc/nginx/sites-available/default

# Create the nginx user if it does not exist
id -u nginx &>/dev/null || useradd -r -d /nonexistent -s /bin/false nginx

# Restart nginx to apply the changes
service nginx restart
